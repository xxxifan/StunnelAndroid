<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <View
        android:id="@+id/drawer_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/divider"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/drawer_content"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <ImageView
            android:id="@+id/drawer_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/drawer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32dp"
            android:layout_toLeftOf="@+id/drawer_count"
            android:layout_toRightOf="@id/drawer_icon"
            android:textSize="@dimen/text_large" />

        <TextView
            android:id="@+id/drawer_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/red_700"
            android:paddingBottom="2dp"
            android:paddingLeft="@dimen/item_padding_small"
            android:paddingRight="@dimen/item_padding_small"
            android:paddingTop="2dp"
            android:text="1"
            android:textColor="@color/white" />
    </RelativeLayout>
</LinearLayout>